<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_custom_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/custom_rom_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/custom_rom_image"
        android:layout_toLeftOf="@id/custom_rom_image"
        android:gravity="center"
        android:text="Android"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/custom_rom_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/container_for_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_rom_image"
        android:orientation="vertical">

    </LinearLayout>


</RelativeLayout>